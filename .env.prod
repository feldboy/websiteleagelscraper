# Production Environment Configuration
ENV=prod
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://legalprod:prodpass@prod-db:5432/legaldb_prod

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-prod
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-prod
LLM_PROVIDER=openai
MAX_TOKENS=800
TEMPERATURE=0.7

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-prod
TELEGRAM_CHANNEL_ID=your-prod-channel-id

# Scraping Configuration
USER_AGENT_ROTATION=true
RESPECT_ROBOTS_TXT=true
RATE_LIMIT_DELAY=2.0
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Quality Assurance
MIN_WORD_COUNT=500
MAX_WORD_COUNT=600
MIN_ORIGINALITY_SCORE=0.95

# Monitoring and Logging
LOG_LEVEL=WARNING
METRICS_ENABLED=true

# Redis Configuration
REDIS_URL=redis://prod-redis:6379

# Scheduling Configuration
SCRAPING_INTERVAL_HOURS=4